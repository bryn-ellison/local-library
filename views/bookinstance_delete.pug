extends layout 

block content 
  h1 #{title}: #{bookinstance.id}
  p #[strong Book title:]  
    =book.title
  p #[strong Imprint:]  
    =bookinstance.imprint
  p #[strong Due back:]
    =bookinstance.due_back_formatted

  p Do you really want to delete this book-instance?

  form(method='POST' action='')
    div.form-group 
      input#bookinstanceid.form-control(type='hidden', name='bookinstanceid', required='true', value=bookinstance.id)

    button.btn.btn-primary(type='submit') Delete